{
  "name": "deck",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "bun run --filter '*' start",
    "dev": "bun run --filter '*' dev",
    "lint": "oxlint .",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "typecheck": "tsc -b --noEmit",
    "build": "bun run --filter '*' build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci:test": "bun run lint && bun run fmt:check && bun run typecheck && bun run test:coverage && bun run build"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.0",
    "oxfmt": "^0.33.0",
    "oxlint": "^0.16.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
