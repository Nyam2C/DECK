{
  "name": "deck",
  "version": "1.0.0",
  "description": "Multi-panel AI coding assistant terminal",
  "author": "DECK",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "main": "electron/dist-electron/main.js",
  "scripts": {
    "start": "bun run --filter '*' start",
    "dev": "bun run --filter '*' dev",
    "lint": "oxlint .",
    "fmt": "oxfmt --write .",
    "fmt:check": "oxfmt --check .",
    "typecheck": "tsc -b --noEmit",
    "build": "bun run --filter '*' build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci:test": "bun run lint && bun run fmt:check && bun run typecheck && bun run test:coverage && bun run build",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:dev": "bun run electron:build && electron .",
    "electron:dist": "bun run build && bun run electron:build && electron-builder"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^3.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "happy-dom": "^20.6.3",
    "oxfmt": "^0.33.0",
    "oxlint": "^0.16.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
